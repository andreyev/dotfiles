# hardstatus alwayslastline "%{gk} %c | %d/%m/%Y | %?%-Lw%?%{kg}%n-%f %t%?(%u)%?%{gk}%+Lw%? " 
hardstatus alwayslastline "%{gK} %c | %d/%m/%Y | %w " 

